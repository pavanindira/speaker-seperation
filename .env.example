# =============================================================================
# Speaker Separation API - Environment Configuration
# =============================================================================

# =============================================================================
# Security Settings (CRITICAL - Set these in production!)
# =============================================================================

# JWT Secret Key - MUST be at least 32 characters in production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-very-secret-key-here-at-least-32-characters-long

# Enable authentication (set to 'true' in production)
ENABLE_AUTH=false

# API Key for service-to-service communication
API_KEY=

# =============================================================================
# Ollama Settings (AI Analysis)
# =============================================================================
OLLAMA_URL=http://192.168.1.33:11434
OLLAMA_MODEL=llama3.2

# =============================================================================
# HuggingFace (for pyannote advanced diarization)
# =============================================================================
HF_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Redis Configuration (Rate Limiting & Caching)
# =============================================================================
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_UPLOADS=10
RATE_LIMIT_WINDOW=3600

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# =============================================================================
# Audio Processing Defaults
# =============================================================================
DEFAULT_NUM_SPEAKERS=2
DEFAULT_CLUSTERING_METHOD=gmm
MFCC_COEFFICIENTS=20

# =============================================================================
# API Settings
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8900
API_MAX_FILE_SIZE=104857600

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=*

# =============================================================================
# Storage Paths
# =============================================================================
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
TEMP_DIR=temp

# =============================================================================
# GPU Support
# =============================================================================
USE_GPU=true
GPU_DEVICE=cuda:0

# =============================================================================
# Development & Logging
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO
AUTO_RELOAD=false
